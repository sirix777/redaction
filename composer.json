{
  "name": "sirix/redaction",
  "description": "PHP library for data redaction, masking, and sanitization with optional Monolog integration.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "php",
    "monolog",
    "log",
    "logging",
    "redaction",
    "masking",
    "anonymization",
    "privacy",
    "pii",
    "gdpr",
    "data-protection",
    "security"
  ],
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8.2",
    "monolog/monolog": "^3.9",
    "phpunit/phpunit": "^10.5.58"
  },
  "suggest": {
    "monolog/monolog": "To use Monolog processor integration."
  },
  "autoload": {
    "psr-4": {
      "Sirix\\Redaction\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Sirix\\Redaction\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "bump-after-update": true,
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true,
      "target-directory": "tools"
    }
  },
  "scripts": {
    "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
    "check": [
      "@cs-check",
      "@rector",
      "@phpstan",
      "@test"
    ],
    "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --dry-run -vvv --diff",
    "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
    "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
    "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=1G",
    "rector": "php tools/rector/vendor/bin/rector process --dry-run --xdebug --memory-limit=1G",
    "test": "phpunit --colors=always --testdox"
  }
}
